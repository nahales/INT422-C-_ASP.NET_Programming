@model IEnumerable<Assignment6.Controllers.PlaylistWithDetails>

@{
    ViewBag.Title = "Index";
}

<h2>List of playlists</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Number of tracks on this playlist
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (item.TracksCount >= 0)
                { <span class="badge"> @item.TracksCount </span>}
                else
                { <span> @item.TracksCount </span>}
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlaylistId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlaylistId })
            </td>
        </tr>
    }
</table>
